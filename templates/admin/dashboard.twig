{% extends "admin/base.twig" %}

{% block content %}
<div class="dashboard-container">
    <!-- Stats Overview -->
    <div class="stats-overview glass-panel">
        <div class="stats-grid">
            <div class="stat-card animate-fade" data-stat="revenue">
                <div class="stat-icon">ðŸ’°</div>
                <div class="stat-value">â‚¬{{ stats.revenue|number_format(2) }}</div>
                <div class="stat-label">Revenue</div>
                <div class="stat-trend {{ stats.revenue_trend >= 0 ? 'positive' : 'negative' }}">
                    {{ stats.revenue_trend }}%
                </div>
            </div>
            <!-- More stat cards -->
        </div>
    </div>

    <!-- Print System Status -->
    <div class="printers-status glass-panel">
        <h2>Print System Status</h2>
        <div class="printers-grid">
            {% for printer in printers %}
                <div class="printer-card glass-panel" data-printer-id="{{ printer.id }}">
                    <div class="printer-status {{ printer.status }}">
                        <div class="status-indicator"></div>
                    </div>
                    <h3>{{ printer.name }}</h3>
                    <div class="printer-stats">
                        <div class="stat">Queue: {{ printer.queue_size }}</div>
                        <div class="stat">Ink: {{ printer.ink_level }}%</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
