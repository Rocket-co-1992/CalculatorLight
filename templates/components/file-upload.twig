<div class="file-upload-zone glass-panel" id="dropZone">
    <div class="upload-content">
        <i class="icon upload-icon">üìÅ</i>
        <h3>Drop files here or click to upload</h3>
        <p>Supports PDF, PNG, JPG, AI, PSD (max. 50MB)</p>
    </div>
    
    <div class="file-list">
        {% for file in files %}
            <div class="file-item glass-panel" data-file-id="{{ file.id }}">
                <div class="file-preview">
                    {% if file.type == 'image' %}
                        <img src="{{ file.thumbnail }}" alt="{{ file.name }}">
                    {% else %}
                        <i class="icon">üìÑ</i>
                    {% endif %}
                </div>
                <div class="file-info">
                    <span class="file-name">{{ file.name }}</span>
                    <div class="file-meta">
                        <span class="file-size">{{ file.size }}</span>
                        <span class="file-type">{{ file.type }}</span>
                    </div>
                </div>
                <button class="remove-file" data-file-id="{{ file.id }}">√ó</button>
            </div>
        {% endfor %}
    </div>
</div>
