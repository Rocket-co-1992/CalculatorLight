{% extends "base.twig" %}

{% block content %}
<div class="container-fluid">
    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="glass-card p-4 text-center">
                <i class="fas fa-plus-circle fa-3x mb-3"></i>
                <h4>New Order</h4>
                <a href="/order/create" class="btn btn-futuristic mt-2">Start Order</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card p-4 text-center">
                <i class="fas fa-palette fa-3x mb-3"></i>
                <h4>Design Tool</h4>
                <a href="/design/editor" class="btn btn-futuristic mt-2">Create Design</a>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row">
        <div class="col-md-8">
            <div class="glass-card p-4">
                <h3>Recent Orders</h3>
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in recent_orders %}
                            <tr>
                                <td>#{{ order.id }}</td>
                                <td>{{ order.created_at|date('Y-m-d') }}</td>
                                <td>
                                    <span class="badge bg-{{ order.status_color }}">
                                        {{ order.status }}
                                    </span>
                                </td>
                                <td>â‚¬{{ order.total|number_format(2) }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
